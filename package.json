{
  "name": "weekly-lotto",
  "version": "1.0.0",
  "description": "동행복권 로또6/45 자동 구매 및 당첨 확인 시스템",
  "type": "module",
  "scripts": {
    "lotto:buy": "node --env-file=.env --import tsx src/lotto645/commands/buy.ts",
    "lotto:check": "node --env-file=.env --import tsx src/lotto645/commands/check.ts",
    "lotto:check-result": "node --env-file=.env --import tsx src/lotto645/commands/check-result.ts",
    "pension:buy": "node --env-file=.env --import tsx src/pension720/commands/buy.ts",
    "pension:check": "node --env-file=.env --import tsx src/pension720/commands/check.ts",
    "pension:check-result": "node --env-file=.env --import tsx src/pension720/commands/check-result.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "HEADED=true npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "lotto",
    "automation",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "claude": "^0.1.1",
    "nodemailer": "^6.9.16",
    "playwright": "^1.49.1",
    "update": "^0.7.4",
    "upgrade": "^1.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.0",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^6.4.17",
    "dotenv": "^17.2.3",
    "eslint": "^9.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.1.8"
  }
}
